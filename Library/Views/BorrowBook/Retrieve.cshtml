@model BorrowBookVM
@{
}

<style>
    ul {
        list-style: none
    }
</style>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Retrieve Book</h5>

        <form asp-action="Retrieve" class="row g-3">
            <div class="col-12">
                <label>Borrower Name</label>
                <select asp-for="BorrowerCode" asp-items="@ViewBag.Borrowers" class="form-select">
                    <option>--Select Borrower Name--</option>
                </select>
            </div>
            <div class="col-12">
                <label>Book Name</label>
                <select asp-for="BookId" asp-items="@ViewBag.books" class="form-select">
                    <option>--Select Book Name--</option>
                </select>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger summary"></div>

            <div class="form-group mt-2 d-flex justify-content-center">
                <input type="submit" value="Retrieve" class="btn btn-primary w-50" />
            </div>
        </form>

    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
