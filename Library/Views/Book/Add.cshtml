@model BookVM
@{
    
}
<style>
    ul {
        list-style: none
    }
</style>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add Book</h5>
        
        <form asp-action="Add" class="row g-3">
            <div class="col-12">
                <label for="code" class="form-label">Code</label>
                <input type="number" asp-for="Code" class="form-control" id="code" placeholder="Book Code" min="1">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label for="name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" id="name" placeholder="Book Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label for="copy" class="form-label">Copies</label>
                <input type="number" asp-for="Copies" class="form-control" id="copy" placeholder="Book Copies" min="1">
                <span asp-validation-for="Copies" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger summary"></div>

            </div>
            
            <div class="form-group mt-2 d-flex justify-content-center">
                <input type="submit" value="Add" class="btn btn-primary w-50"/>
            </div>
        </form>

    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



























            
